    "postcss": "^8.4.38",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-datepicker": "^7.2.0",
    "react-dom": "^18.2.0",
    "react-drag-drop-files": "^2.3.10",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.24.0",
    "react-select": "^5.8.0",
    "react-toastify": "^10.0.6",
    "styled-components": "^6.1.11",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5"
  },
  "eslintConfig": {
